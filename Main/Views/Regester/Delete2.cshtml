@model sql4.Models.ad

@{
    ViewBag.Title = "Delete";
}
@{
    Layout = "~/Views/Shared/Admin_.cshtml";
}
<h2>Delete</h2>

@Styles.Render("~/Content/ai.css")
@Styles.Render("~/Content/pk.css")
@Styles.Render("~/Content/compk.css")
@Scripts.Render("~/bundles/jqueryval")




<h3>Are you sure you want to delete this?</h3>

<div class="columns app">
    <section class="widecolumn">

        <div id="err_cleared_by" class="error_label" style="display: none">
            <span class="msg_warning nohistory"></span>
        </div>
        <div class="form">

            <fieldset>











                <div class="display-label">
                    <h3>  AD ID</h3>
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.ad_id)
                </div>

                <div class="display-label">
                    <h3>Name Of The User</h3>
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.name)
                </div>

                <div class="display-label">
                    <h3>Area OF User</h3>
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.area.name)
                </div>

                <div class="display-label">
                    <h3>Catagory</h3>
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.catagory)
                </div>

                <div class="display-label">
                    <h3>Title</h3>
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.title)
                </div>

                <div class="display-label">
                    <h3>Description of Item</h3>
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.description)
                </div>

                <div class="display-label">
                    <h3>City </h3>
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.city.cityName)
                </div>

                <div class="display-label">
                    <h3>Date</h3>
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.date)
                </div>

                <div class="display-label">
                    <h3>Email</h3>
                </div>

                <div class="display-field">
                    @Html.DisplayFor(model => model.e_mail)
                </div>

                <div class="display-label">
                    <h3>Phone Number</h3>
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.phone)
                </div>

                <div class="display-label">
                    <h3>Photo 1</h3>
                </div>
                <div class="display-field">
                    <img src="/Images/@Model.url3" width="200" height="200">
                </div>

                <div class="display-label">
                    <h3>Photo 2</h3>
                </div>
                <div class="display-field">
                    <img src="/Images/@Model.url1" width="200" height="200">
                </div>
        </div>

        <div class="display-label">
            <h3> Price</h3>
        </div>
        <div class="display-field">
            @Model.price.ToString("#,##0")
        </div>
        </fieldset>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <p>
                <input type="submit" value="Delete" /> |
                @Html.ActionLink("Back to List", "/report")
            </p>
        }


</div>
                </section>

</div>